@model System.Data.DataTable
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditUser</h2>

<div class="container">
    <form class="form-group" id="formEdit">

        <div>
            <label>Codigo</label>
            <input type="number" value="@Model.Rows[0][0]" id="id" disabled />
        </div>

        <div class="form-group">
            <label>Correo</label>
            <input type="text" value="@Model.Rows[0][1]" id="email" required>
        </div>

        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" value="@Model.Rows[0][2]" id="password" required />
        </div>

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" value="@Model.Rows[0][3]" id="name" required/>
        </div>
        <div class="form-group">
            <label>Apellido</label>
            <input type="text" value="@Model.Rows[0][4]" id="lastName" required/>
        </div>
        <div class="form-group">
            <label>Teléfono</label>
            <input type="number" value="@Model.Rows[0][5]" id="phone"  required/>
        </div>
        <div class="form-group">
            <input type="submit" name="Actualizar" class="btn btn-success" />
        </div>

    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src="~/Scripts/Access/SetUser.js"></script>