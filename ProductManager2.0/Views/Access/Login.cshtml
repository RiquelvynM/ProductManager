    
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form id="form">
    <div class="form-group">
        <h2>Login</h2>
    </div>
    <div class="form-group">
        <label>Usuario</label>
        <input type="email" placeholder="Correo@correo.com" id="email" />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input type="password" placeholder="Contraseña" id="password" />
    </div>
    <div>
        <label class="text-warning">@ViewBag.Error</label>
    </div>
    <div class="form-group">
        <a href="/Access/RegistrerUser" class="btn btn-default"> Registrar</a>
        <input type="submit" value="Enviar" class="btn btn-success">
    </div>
</form>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src="~/Scripts/Access/Login1.js"></script>