@model System.Data.DataTable
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Category</h2>

<div class="container">
    <form class="form-group" id="formEdit">

        <div>
            <label>Codigo</label>
            <input type="number" value="@Model.Rows[0][0].ToString()" id="id" disabled />
        </div>

        <div class="form-group">
            <label>Nombre</label>
            <input value="@Model.Rows[0][1].ToString()" id="name">
        </div>

        <div class="form-group">
            <label>Precio</label>
            <input type="text" value="@Model.Rows[0][2].ToString()" id="details" />
        </div>

        <div class="form-group">
            <a href="~/Category/ListingCategory" class="btn btn-default"> Atras</a>
            <input type="submit" name="Enviar" class="btn btn-success" />
        </div>

    </form>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>

<script src="~/Scripts/Category/UpdateCategory.js"></script>


