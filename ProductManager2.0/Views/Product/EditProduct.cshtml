@model System.Data.DataTable
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Editar Producto</h2>


<div class="container">
    <form class="form-group" id="formEdit">
        <div>
            <label class="text-warning">@ViewBag.Error</label>
        </div>
        <div>
            <label>Codigo</label>
            <input type="number" value="@Model.Rows[0][0]" id="id" disabled />
        </div>

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" value="@Model.Rows[0][1]" id="name" required>
        </div>

        <div class="form-group">
            <label>Precio</label>
            <input type="number" value="@Model.Rows[0][2]" id="price" required />
        </div>

        <div class="form-group">
            <label>Detalle</label>
            <input value="@Model.Rows[0][3]" id="detail" required />
        </div>

        <div class="form-group">
            <label>ID Categoria</label>
            <select id="categoryId">
                <option value="@Model.Rows[0][5]" id="categoryId">@Model.Rows[0][4]</option>

            </select>
        </div>

        <div class="form-group">
            <a href="~/Product/ListingProducts" class="btn btn-default"> Atras</a>
            <input type="submit" name="Enviar" class="btn btn-success" />
        </div>

    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>

<script src="~/Scripts/Product/UpdateProduct.js"></script>



