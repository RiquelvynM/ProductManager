
@{
    ViewBag.Title = "ListingProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Listado de produtos</h2>
    <br />

    <form class="form-group">
        <input type="search" id="search" placeholder="Buscar" />
    </form>
    <form>
        <div>
            <table class="table table-responsive table-bordered">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Detalles</th>
                        <th>Nombre Categoria</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody id="products">
                    @*Los datos de esta tabla son buscados por ajax*@

                </tbody>
            </table>
        </div>
        <div>
            <a href="~/Product/CreateProduct" class="btn btn-default">Agregar Producto</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>

<script src="~/Scripts/Product/GetProduct.js"></script>

