
@{
    ViewBag.Title = "ListingProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Listing produts</h2>
    <br />

    <form class="form-group">
        <input type="search" id="search" placeholder="Search" />
    </form>
    <form>
        <div>
            <table class="table table-responsive table-bordered">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Details</th>
                        <th>Category Name</th>
                        <th>Tools</th>
                    </tr>
                </thead>
                <tbody id="products">
                    @*Los datos de esta tabla son buscados por ajax*@

                </tbody>
            </table>
        </div>
        <div>
            <a href="~/Product/CreateProduct" class="btn btn-default">Add Products</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>

<script src="~/Scripts/Product/GetProduct.js"></script>

